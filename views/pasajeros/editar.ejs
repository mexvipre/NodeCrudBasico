<%- include('../partials/header') %>

<div class="container mt-5">
  <h1>Editar Pasajero</h1>
  
  <form action="/pasajeros/editar/<%= pasajero.id_pasajero %>" method="POST">
    <div class="field">
      <label class="label">Nombre</label>
      <div class="control">
        <!-- Solo letras y espacios, con validación HTML de patron -->
        <input class="input" type="text" name="nombre" value="<%= pasajero.nombre %>" required placeholder="Nombre del pasajero" pattern="^[a-zA-Z\s]+$" title="El nombre solo puede contener letras." />
      </div>
    </div>
    
    <div class="field">
      <label class="label">DNI</label>
      <div class="control">
        <!-- Solo números con exactamente 8 dígitos -->
        <input class="input" type="text" name="dni" value="<%= pasajero.dni %>" required placeholder="DNI del pasajero" pattern="^\d{8}$" title="El DNI debe tener exactamente 8 dígitos numéricos." />
      </div>
    </div>
    
    <div class="control">
      <button class="button is-primary" type="submit">Actualizar Pasajero</button>
      <a href="/pasajeros" class="button is-light">Cancelar</a>
    </div>
  </form>
</div>

<%- include('../partials/footer') %>
